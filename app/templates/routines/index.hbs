<div class="flex-row actions">
  {{#if isEditing}}
    <a {{action "edit"}} class="fadein">
      <i class="fa fa-times-circle-o"></i> Cancel
    </a>
  {{else}}
    <a {{action "edit"}}>
      <i class="fa fa-pencil"></i> Edit
    </a>
   {{/if}}
  {{#link-to "routines.new"}}<i class="fa fa-plus"></i> Create{{/link-to}}
</div>
<ul class="routines-list">
  {{#each routine in model itemController="routines.show"}}
    <li>
      <span>
        {{#if parentController.isEditing}}
          <i class="fa fa-lg fa-times-circle red" {{action "delete" routine}}></i>
          {{#link-to "routines.edit" routine}}{{routine.name}}<i class="fa fa-angle-right"></i>{{/link-to}}
        {{else}}
          {{#link-to "routines.show" routine}}{{routine.name}}{{/link-to}}
        {{/if}}
      </span>
    </li>
  {{/each}}
</ul>