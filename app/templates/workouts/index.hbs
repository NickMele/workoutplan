<div class="flex-row actions">
  {{#if isEditing}}
    <a {{action "edit"}} class="fadein">
      <i class="fa fa-times-circle-o"></i> Cancel
    </a>
  {{else}}
    <a {{action "edit"}}>
      <i class="fa fa-pencil"></i> Edit
    </a>
   {{/if}}
  {{#link-to "workouts.new"}}<i class="fa fa-plus"></i> Create{{/link-to}}
</div>
<ul class="workouts-list">
  {{#each workout in model itemController="workouts.show"}}
    <li>
      <span>
        {{#if parentController.isEditing}}
          <i class="fa fa-lg fa-times-circle red" {{action "delete" workout}}></i>
          {{#link-to "workouts.edit" workout}}{{workout.name}}<i class="fa fa-angle-right"></i>{{/link-to}}
        {{else}}
          {{#link-to "workouts.show" workout}}{{workout.name}}{{/link-to}}
        {{/if}}
      </span>
    </li>
  {{/each}}
</ul>